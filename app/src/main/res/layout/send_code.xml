<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/mobile_for_verifyCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:text="@string/input_mobile_for_verifyCode"/>
        <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext_normal"
            android:inputType="number"
            android:maxLength="4"
            android:layout_marginTop="20dp"
            android:hint="请输入验证码"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColorHint="@color/gray"
            android:textColor="@color/gray"
            android:id="@+id/code"
            android:layout_below="@+id/mobile_for_verifyCode"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/code_submit_button"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:textSize="18dp"
            android:background="@drawable/button_eb_ctrl"
            android:enabled="false"
            android:text="确定"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/code"
            android:layout_alignRight="@+id/button"
            android:layout_alignEnd="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/get_verifyCode"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/get_verifyCode"
            android:textColor="@color/white"
            android:background="@drawable/button_eb_ctrl"
            android:layout_alignTop="@+id/code"
            android:layout_toRightOf="@+id/code"
            android:layout_toEndOf="@+id/code"
            android:layout_above="@+id/code_submit_button" />
    </RelativeLayout>
</RelativeLayout>